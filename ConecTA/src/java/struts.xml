<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="loginMercado" class="control.ControlMercado" method="loginMercado">
            <result name="success">JSP/mercado/MenuMercado.jsp</result>
            <result name="error">JSP/mercado/error.jsp</result>
        </action>
        
        <action name="transportAyuda" class="control.ControlMercado" method="transportAyuda">
            <result name="success">JSP/mercado/LlevarAyuda.jsp</result>
            <result name="error">JSP/mercado/error.jsp</result>
        </action>
        
    </package>
</struts>
